# Stage that builds the application, a prerequisite for the running stage
FROM maven:3-openjdk-11-slim as build
RUN curl -sL https://deb.nodesource.com/setup_14.x | bash -
RUN apt-get update -qq && apt-get install -qq --no-install-recommends nodejs

# Stop running as root at this point (fmu -> finance manager user)
RUN useradd -m fmu

RUN mkdir -p /csvcryptoutils/src \
    && chown fmu:fmu /csvcryptoutils/src/ \
    && mkdir -p /financemanager/src \
    && chown fmu:fmu /financemanager/src/

USER fmu

# CsvCryptoUtils
WORKDIR /csvcryptoutils/src/

COPY --chown=fmu:fmu csvcryptoutils/pom.xml ./
COPY --chown=fmu:fmu csvcryptoutils/src ./src
RUN mvn clean install -DskipTests

# FinanceManagerApp
WORKDIR /financemanager/src/

# Copy pom.xml and prefetch dependencies so a repeated build can continue from the next step with existing dependencies
COPY --chown=fmu:fmu financemanagerapp/pom.xml ./
RUN mvn dependency:go-offline -Pproduction

# Copy all needed project files to a folder
COPY --chown=fmu:fmu financemanagerapp/src ./src
COPY --chown=fmu:fmu financemanagerapp/frontend ./frontend
COPY --chown=fmu:fmu financemanagerapp/package.json ./

# Using * after the files that are autogenerated so that so build won't fail if they are not yet created
COPY --chown=fmu:fmu financemanagerapp/package-lock.json* financemanagerapp/pnpm-lock.yaml* financemanagerapp/webpack.config.js* ./

# Build the production package, assuming that we validated the version before so no need for running tests again
RUN mvn clean package spring-boot:repackage -DskipTests -Pproduction

# Running stage: the part that is used for running the application
FROM openjdk:11-jre-slim
COPY --from=build /financemanager/src/target/*.jar /financemanager/app/app.jar
RUN useradd -m fmu
RUN mkdir /financemanager/dbfiles \
    && chown fmu:fmu /financemanager/dbfiles
USER fmu
EXPOSE 8080
VOLUME /financemanager/dbfiles
CMD java -jar /financemanager/app/app.jar
